<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/place_autocomplete_prediction_primary_text_highlight"
    tools:context="com.capstone.jobapplication.jobbridge.SignOutActivity"
    app:layout_constraintTop_toTopOf="@+id/button2"
    tools:layout_editor_absoluteX="0dp"
    android:layout_marginTop="0dp">

    <LinearLayout
        android:layout_width="135dp"
        android:layout_height="495dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">

        <Button
            android:id="@+id/logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="43dp"
            android:layout_weight="1"
            android:background="@color/wallet_bright_foreground_holo_dark"
            android:padding="20dp"
            android:text="Log Out"
            android:textColor="@color/cast_expanded_controller_background_color"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="151dp" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
