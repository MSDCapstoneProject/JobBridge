<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView12"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:padding="10dp"
            android:text="Notifications"
            android:textColor="@color/cast_intro_overlay_button_background_color"
            android:textColorLink="@color/cast_intro_overlay_button_background_color"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:orientation="horizontal"
        android:padding="0dp"
        android:paddingBottom="0dp"
        android:paddingEnd="0dp">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="500dp"
            android:layout_height="33dp"
            android:layout_marginLeft="20dp"
            android:layout_weight="0.51"
            android:padding="10dp"
            android:paddingBottom="0dp"
            android:paddingEnd="0dp"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:text="Accept Push Notifications"
            android:textSize="12sp"
            android:textStyle="bold" />

        <Switch
            android:id="@+id/switchPush"
            android:layout_width="53dp"
            android:layout_height="33dp"
            android:layout_marginRight="40dp"
            android:checked="false"
            android:onClick="onSwitchChanged" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="187dp">

        <TextView
            android:id="@+id/Job"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="58dp"
            android:layout_marginTop="39dp"
            android:text="New Job Posting" />

        <CheckBox
            android:id="@+id/newjob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/Job"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="38dp"
            android:textColorLink="@color/cast_intro_overlay_button_background_color"
            android:onClick="onCheckboxClicked"/>

        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_alignStart="@+id/Job"
            android:layout_below="@+id/newjob"
            android:layout_marginTop="32dp"
            android:text="Apply Result" />

        <CheckBox
            android:id="@+id/applystatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView15"
            android:layout_alignBottom="@+id/textView15"
            android:layout_alignStart="@+id/newjob"
            android:textColorLink="@color/cast_intro_overlay_button_background_color"
            android:onClick="onCheckboxClicked"/>


    </RelativeLayout>


</LinearLayout>